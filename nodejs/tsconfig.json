{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "lib": ["dom", "es2018"],
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "removeComments": true,    
      "resolveJsonModule": true,
      "strict": true,
      "typeRoots": ["node_modules/@types"],
      "sourceMap": true
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts"]
}
